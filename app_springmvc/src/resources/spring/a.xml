<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-4.3.xsd
      ">
    <!--定义被代理者-->
    <bean id="me" class="com.cp.shanghai.util.aspect.Me"/>
    <!--定义通知内容，切入点执行后需要做得事-->
    <bean id="sleepHelper" class="com.cp.shanghai.util.aspect.SleepHelper"/>
    <!--定义切入点位置-->
    <bean id="sleepProintcut" class="org.springframework.aop.support.JdkRegexpMethodPointcut">
        <property name="pattern" value=".*sleep"/>
    </bean>
    <!--使切入点与通知相关联，完成切面配置-->
    <bean id="sleepHelperAdvisor" class="org.springframework.aop.support.DefaultPointcutAdvisor">
        <property name="advice" ref="sleepHelper"/>
        <property name="pointcut" ref="sleepProintcut"/>
    </bean>

    <!--设置代理-->
    <bean id="proxy" class="org.springframework.aop.framework.ProxyFactoryBean">
        <!--切面目标-->
        <property name="target" ref="me"/>
        <!--使用切面-->
        <property name="interceptorNames" value="sleepHelperAdvisor"/>
        <!--代理接口-->
        <property name="proxyInterfaces" value="com.cp.shanghai.util.aspect.Sleepable"/>
    </bean>
</beans>